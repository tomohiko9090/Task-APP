<h3 style="text-align: leftx"><%= @user.nickname %>さん、こんにちは👋</h3>
<br>
<%= form_with model: @task do |f| %>
<div class="d-flex" style="display:flex;">
	<div>
        <p><b>タスク内容</b></p> 
        <p><%= f.text_field :task_name, class: "form-control input-number border-dark", style: "width:200px", placeholder: "ex.部屋の掃除"%></p>
    </div>
	<div>
        <p><b>見積もり</b></p>
        <div class="d-flex" style="display:flex;">
            <div><%= f.number_field :estimated_time, value: 0, class: "form-control input-number border-dark", min: 1, max: 100,  style: "width:70px" %></div>
            <div style="vertical-align: text-bottom">min</div>
        </div>
    </div>
</div>
<div>
    <div class="form-check">
      <%= f.label "本日のタスク", class: "form-check-label", for: "flexRadioDefault1" %>
      <%= f.check_box :check_box, class: "form-check-input", value: "today" %>
      <%# <input class=form-check-input type="radio" name="table_type" value="today"> %>
      <%# <label class="form-check-label" for="flexRadioDefault1"> %>
        <%# 本日のタスク
      </label> %>
    </div>
</div>
<div>
    <%= f.submit "登録する", class: "bubbly-button" %>
</div>
<% end %>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

<br>
